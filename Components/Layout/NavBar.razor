@implements IDisposable
@inject NavigationManager NavigationManager

<nav class="navbar navbar-expand-lg bg-dark" data-bs-theme="dark">
    <div class="container">
        <a class="navbar-brand" href="">
            <img src="/Images/White-Logo.png" width="160" />
        </a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarColor01"
                aria-controls="navbarColor01" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarColor01">
            <ul class="navbar-nav me-auto">
                <li class="nav-item px-2 py-2">
                    <NavLink class="nav-link" href="/" Match="NavLinkMatch.All">Home</NavLink>
                </li>
                <AuthorizeView Roles="@(SD.Role_Recruiter)">
                    <li class="nav-item px-2 py-2">
                        <NavLink class="nav-link" href="/Recruiters/dashboard">Dashboard</NavLink>
                    </li>
                </AuthorizeView>
                <AuthorizeView Roles="@(SD.Role_JobSeeker)">
                    <li class="nav-item px-2 py-2">
                        <NavLink class="nav-link" href="/Jobseeker/dashboard">Dashboard</NavLink>
                    </li>
                </AuthorizeView>
                <AuthorizeView Roles="@SD.Role_Admin">
                    <Dropdown>
                        <DropdownToggleButton Class="nav-link">Management</DropdownToggleButton>
                        <DropdownMenu>
                            <DropdownItem To="/admin/users" Type="DropdownItemType.Link">Users</DropdownItem>
                            <DropdownItem To="/admin/dashboard" Type="DropdownItemType.Link">Job Posts</DropdownItem>
                        </DropdownMenu>
                    </Dropdown>
                </AuthorizeView>
                <AuthorizeView>
                    <li class="nav-item px-2 py-2">
                        <NavLink class="nav-link" href="/Messages">Messages</NavLink>
                    </li>
                </AuthorizeView>
            </ul>
            <ul class="navbar-nav ms-auto">
                <AuthorizeView Roles="@SD.Role_JobSeeker">
                    <li class="nav-item px-2 py-2">
                        <NavLink class="nav-link" href="/Profile"><Icon Name="IconName.PersonCircle" /> Profile</NavLink>
                    </li>
                </AuthorizeView>
                <AuthorizeView Roles="@($"{SD.Role_Admin},{SD.Role_Recruiter}")">
                    <li class="nav-item px-2 py-2">
                        <NavLink class="nav-link" href="/Account/Manage/Phone"><Icon Name="IconName.PersonCircle" /> Profile</NavLink>
                    </li>
                </AuthorizeView>
                <AuthorizeView>
                    <Authorized>
                        <li>
                            <form action="Account/Logout" method="post">
                                <AntiforgeryToken />
                                <input type="hidden" name="ReturnUrl" value="@currentUrl" />
                                <button type="submit" class="nav-link btn btn-outline-danger mx-2 my-2">Logout</button>
                            </form>
                        </li>
                    </Authorized>
                    <NotAuthorized>
                        <li class="nav-item px-2 py-2">
                            <NavLink class="nav-link" href="/Account/Register">Register</NavLink>
                        </li>
                        <li class="nav-item px-2 py-2">
                            <NavLink class="nav-link" href="/Account/Login">Login</NavLink>
                        </li>
                    </NotAuthorized>
                </AuthorizeView>
            </ul>
        </div>
    </div>
</nav>

@code {
    private string? currentUrl;

    protected override void OnInitialized()
    {
        currentUrl = NavigationManager.ToBaseRelativePath(NavigationManager.Uri);
        NavigationManager.LocationChanged += OnLocationChanged;
    }

    private void OnLocationChanged(object? sender, LocationChangedEventArgs e)
    {
        currentUrl = NavigationManager.ToBaseRelativePath(e.Location);
        StateHasChanged();
    }

    public void Dispose()
    {
        NavigationManager.LocationChanged -= OnLocationChanged;
    }
}